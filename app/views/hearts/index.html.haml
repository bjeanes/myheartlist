- title @user ? "#{@user.username}'s Hearts" : "Global Hearts"

%p= link_to "add heart", new_user_heart_path(current_user) if logged_in? && @user==current_user
%ol
  - for heart in @hearts
    %li
      = link_to heart.name, @user ? user_heart_path(@user, heart) : heart_path(heart)
      = "(#{pluralize(heart.items_count, 'person')} <3 this)" unless @user

